<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dip"
    android:layout_margin="5dp"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/secondCallPictureId"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:contentDescription="Picture"/>

    <TextView
        android:id="@+id/secondCallerNameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#455346"
        android:textSize="20dip"
        android:textStyle="bold"
        android:padding="5dp" />

    <TextView
        android:id="@+id/secondCallerNumberId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="15dip"
        android:textColor="#455346"
        android:gravity="center"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingTop="20dip"
      style="?android:attr/buttonBarStyle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationX="-5dip"
        android:layout_weight="0.30"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

      <Button
          android:id="@+id/terminateAndAnswerBackButtonId"
          android:layout_width="45dip"
          android:layout_height="45dip"
          android:background="@drawable/button"
          android:backgroundTint="#e76565"
          android:drawableStart="@drawable/decline_24"
          style="?android:attr/borderlessButtonStyle"/>
      <Button
          android:id="@+id/terminateAndAnswerFrontButtonId"
          android:layout_width="45dip"
          android:layout_height="45dip"
          android:translationX="25dip"
          android:translationY="-25dip"
          android:background="@drawable/button"
          android:backgroundTint="#157f1f"
          android:drawableStart="@drawable/answer_24"
          style="?android:attr/borderlessButtonStyle"/>

      <TextView
          android:id="@+id/terminateAndAnswerButtonTextId"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textColor="#455346"
          android:textSize="20dip"
          android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.40"
        android:orientation="vertical"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

      <Button
          android:id="@+id/declineSecondCallButtonId"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minHeight="70dip"
          android:minWidth="70dip"
          android:background="@drawable/button"
          android:backgroundTint="#e76565"
          android:drawableStart="@drawable/decline_54"
          style="?android:attr/borderlessButtonStyle"/>

      <TextView
          android:id="@+id/declineSecondCallButtonTextId"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textColor="#455346"
          android:textSize="20dip"
          android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.30"
        android:translationX="-20dip"
        android:orientation="vertical"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

      <Button
          android:id="@+id/holdAndAnswerBackButtonId"
          android:layout_width="45dip"
          android:layout_height="45dip"
          android:background="@drawable/button"
          android:backgroundTint="#2b94f4"
          android:drawableStart="@drawable/hold_24"
          style="?android:attr/borderlessButtonStyle"/>
      <Button
          android:id="@+id/holdAndAnswerFrontButtonId"
          android:layout_width="45dip"
          android:layout_height="45dip"
          android:translationX="25dip"
          android:translationY="-25dip"
          android:background="@drawable/button"
          android:backgroundTint="#157f1f"
          android:drawableStart="@drawable/answer_24"
          style="?android:attr/borderlessButtonStyle"/>

      <TextView
          android:id="@+id/holdAndAnswerButtonTextId"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textColor="#455346"
          android:textSize="20dip"
          android:gravity="center"/>
    </LinearLayout>

  </LinearLayout>

</LinearLayout>
